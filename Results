<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <script src="https://cdn.jsdelivr.net/npm/chart.js@2.9.3/dist/Chart.min.js"></script>
    <style>
      body {
        background-color: #333;
        color: #fff;
        font-family: sans-serif;
      }

      canvas {
        padding: 20px;
      }
    </style>
  </head>
  <body>
    <h1>Bill Voting Tally</h1>
    <canvas id="pieChart" width="400" height="400"></canvas>
    <script>
      const fetchVotes = () => {
        fetch('https://api.congress.gov/v3/bill?api_key=doXXQe0arMxuRvEzFqfOUhncHCXUscYPRZNzvHBY')
          .then(response => response.json())
          .then(votes => {
            const yesVotes = votes.filter(vote => vote.support === 'yes').length;
            const noVotes = votes.filter(vote => vote.support === 'no').length;

            const pieChart = new Chart(document.querySelector('#pieChart'), {
              type: 'pie',
              data: {
                labels: ['Yes', 'No'],
                datasets: [{
                  data: [yesVotes, noVotes],
                  backgroundColor: ['#4CAF50', '#F44336']
                }]
              }
            });

            const totalVotes = yesVotes + noVotes;
            document.querySelector('#yesVotes').innerText = `Yes: ${yesVotes} (${(yesVotes / totalVotes * 100).toFixed(2)}%)`;
            document.querySelector('#noVotes').innerText = `No: ${noVotes} (${(noVotes / totalVotes * 100).toFixed(2)}%)`;
          });
      };

      fetchVotes();
      setInterval(fetchVotes, 3000);
    </script>
    <p id="yesVotes"></p>
    <p id="noVotes"></p>
  </body>
</html>
